@model CORE.DATAMODEL.LoginRequest

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container body-content wrapper fadeInDown">
    <div id="formContent">

        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { htmlAttributes = new { @autocomplete = "off" }, @id = "frmLogin" }))
        {
            <div class="form-horizontal">
                <div class="fadeIn first">
                    <i class="fa fa-user-circle" id="icon" aria-hidden="true"></i>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="">
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        </div>
                        <div class="">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Html.CheckBoxFor(model => model.Rememberme) <span>Remember me</span>
                    </div>
                    <div class="col-md-6" style="float:left">
                        @Html.ActionLink("Register Here", "Index", "Register")
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Login" class="active" />
                    </div>
                    <div class="col-md-6">
                        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Login")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<!--CSS-->

<link href="~/Scripts/css/Login/Style.css" rel="stylesheet" />

