                                                                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Country" } })
                                                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "alert-danger" })
